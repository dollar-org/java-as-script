        <bcel.version>2.0.2</bcel.version>
        <jdk.version>1.8</jdk.version>
        <maven.version>3.3.9</maven.version>
    </properties>

    <prerequisites>
        <maven>${maven.version}</maven>
    </prerequisites>


    <url>https://github.com/sillelien/java-as-script</url>
